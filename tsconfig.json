{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "lib": ["dom", "es6"],
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": false,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "declaration": true,
        "outDir": "lib",
        "inlineSourceMap": true,
        "inlineSources": true
    },
    "include": [
        "src/**.ts",
        "typings/cocos-creator.d.ts"
    ]
}
